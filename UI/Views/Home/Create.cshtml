
@model WorkCreateDto
<html>
<head>
	<title>
		NTier App
	</title>
	<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

	<div class="container my-2">
		<form asp-action="Create" asp-controller="Home" method="post">
			<div class="mb-3">
				<label>İşin Tanımı:</label>
				<input asp-for="@Model.Definition"/>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted">
				<label class="form-check-label" for="defaultCheck1">
			Tamamlandı mı
				</label>
			</div>
			<div class="mb-3">
				<button type="submit" class="bnt btn-outline-primary">
					Kaydet
				</button>

			</div>
			<div asp-validation-summary="All" class="text-bg-danger"> @*biz burda bunun sayesinde bütün validasyon hatalarını görebilecez*@

			</div>
		</form>
		
	</div>
</body>
</html>
